
body
  overflow:hidden

.navbar
  margin-bottom:    10px

.navbar a
  cursor:           pointer

#main
  padding-top:      10px

#project-name
  border:           none !important
  height:           14px !important
  margin-top:       8px !important

#message-box
  position:               fixed
  top:                    20px
  right:                  20px
  -webkit-border-radius:  15px
  -moz-border-radius:     15px
  border-radius:          15px
  padding:                15px
  font-size:              1.5em
  background-color:       rgba(0, 0, 0, 0.5)
  display:                none
  z-index:                10000
  pointer-events:         none
  color:                  #fff

.ui-layout-resizer
  cursor:                 row-resize !important
  margin-bottom:          10px !important
  overflow:               visible !important

.ui-layout-toggler
  opacity:              1 !important

.ui-layout-resizer-sliding
  opacity:              0 !important

.ui-layout-toggler-open
  background-color:     transparent !important
  border-color:         rgb(85,85,85) transparent transparent
  border-style:         solid
  border-width:         12px 20px 0
  height:               0 !important
  width:                0 !important
  margin-left:          10px !important
  top:                  -3px !important

.ui-layout-toggler-closed
  background-color:     transparent !important
  border-color:         transparent transparent rgb(85,85,85)
  border-style:         solid
  border-width:         0 20px 12px
  height:               0 !important
  width:                0 !important
  margin-left:          10px !important
  top:                  -3px !important


